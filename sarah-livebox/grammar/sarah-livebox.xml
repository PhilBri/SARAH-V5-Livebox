            <item>Coupe<tag>out.action.cmd="Mute";</tag></item>
            <item>Remet<tag>out.action.cmd="Mute";</tag></item>
        </one-of>

        <one-of>
            <item>le son</item>
            <item>le volume</item>
        </one-of>

        <item><ruleref uri="#ruleName"/></item>
    </rule>

