<grammar version="1.0" xml:lang="fr-FR" mode="voice"  root="rulelivebox" xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0">

<!-- Main -->

    <rule id="rulelivebox" scope="public">
        <item>Sarah</item>

        <one-of>
            <!-- On/Off -->
            <item><ruleref uri="#ruleOnOff"/></item>
            <!-- Up & Dwn Channels -->
            <item><ruleref uri="#ruleUpDwn"/></item>
            <!-- Sound -->
            <item><ruleref uri="#ruleSound"/></item>
            <!-- Digits -->
            <item><ruleref uri="#ruleDigits"/></item>
            <!-- Set channels -->
            <item><ruleref uri="#ruleChannels"/></item>
        </one-of>
    </rule>

<!-- Rules -->

    <!-- On/Off -->

    <rule id="ruleOnOff" scope="public">
        <tag>out.action=new Object();</tag>
        <tag>out.action.plugin='livebox';</tag>

        <one-of>
            <item>Allume<tag>out.action.stby='0';</tag></item>
            <!-- <item>Met<tag>out.action.stby='0';</tag></item> -->
            <item>éteins<tag>out.action.stby='1';</tag></item>
             <!--<item>Coupe<tag>out.action.stby='1';</tag></item> -->
        </one-of>

        <item><ruleref uri="#ruleName"/></item>
    </rule>

    <!-- Up & Dwn Channels -->

    <rule id="ruleUpDwn" scope="public">
        <tag>out.action=new Object();</tag>
        <tag>out.action.plugin='livebox';</tag>

        <one-of>
            <item>Mets</item>
            <item>Passe</item>
            <item>Zap sur</item>
        </one-of>

        <one-of>
            <item>le</item>
            <item>la</item>
            <item>au</item>
            <item>a la</item>
            <item>sur le</item>
            <item>sur la</item>
        </one-of>

        <one-of>
            <item>programme</item>
            <item>chaine</item>
        </one-of>

        <one-of>
            <item>suivant<tag>out.action.cmd="PrgUp"</tag></item>
            <item>suivante<tag>out.action.cmd="PrgUp"</tag></item>
            <item>d'après<tag>out.action.cmd="PrgUp"</tag></item>
            <item>précédent<tag>out.action.cmd="PrgDwn"</tag></item>
            <item>précédente<tag>out.action.cmd="PrgDwn"</tag></item>
            <item>d'avant<tag>out.action.cmd="PrgDwn"</tag></item>
        </one-of>

        <item repeat="0-1"><ruleref uri="#ruleName"/></item>
    </rule>

    <!-- Sound -->

    <rule id="ruleSound" scope="public">
        <tag>out.action=new Object();</tag>
        <tag>out.action.plugin='livebox';</tag>

        <one-of>
            <item>Monte<tag>out.action.cmd="VolUp";</tag></item>
            <item>Augmente<tag>out.action.cmd="VolUp";</tag></item>
            <item>Baisse<tag>out.action.cmd="VolDwn";</tag></item>
